{
  "name": "code-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "build/electron/main.js",
  "author": "lasitha92",
  "description": "A tool to help testing your algorithm/AI skills with simple games",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build:react": "tsc -b && vite build",
    "build:electron": "tsc --project src/electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "release:windows": "npm run build:electron && npm run build:react && electron-builder --win --x64"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "^3.5.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
